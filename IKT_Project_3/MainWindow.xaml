<Window x:Class="IKT_Project_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IKT_Project_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel>
            <WrapPanel Height="100"/>
        </StackPanel>
        <Grid x:Name="___No_Name_" Grid.Column="1">
            <Label x:Name="Name" Content="Tic Tac Toe" HorizontalAlignment="Center" Margin="0,23,0,0" VerticalAlignment="Top" FontSize="30" FontWeight="Bold"/>
            <Label Content="Size:" HorizontalAlignment="Left" Margin="292,123,0,0" VerticalAlignment="Top" FontSize="20"/>
            <ComboBox x:Name="Size" HorizontalAlignment="Left" Margin="355,130,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="Size_SelectionChanged"/>
            <Button x:Name="Start" Content="Start" HorizontalAlignment="Center" Margin="0,317,0,0" VerticalAlignment="Top" FontSize="30" Padding="5,5,5,5" Click="Start_Click"/>
        </Grid>

    </Grid>
</Window>
